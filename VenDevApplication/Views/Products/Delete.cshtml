@model VenDevApplication.Models.Product

@{
    ViewData["Title"] = "Supprimer";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this product?</h3>
<div class="text-danger text-center" > @ViewBag.Message</div>
<div class="card mb-3" >
  <div class="row g-0">
    <div class="col-md-4">
      <img src="~/images/@Model.Image" class="img-fluid rounded-start" style="max-width=50%" alt="...">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Html.DisplayFor(model => model.Name)</h5>
        <p class="card-text"> @Html.DisplayFor(model => model.Description)</p>
         <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Quantite)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Quantite)
            </dd>
        </dl>
      </div>
    </div>
  </div>
</div>
<div>
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="supprimer" class="btn btn-danger" /> 
        <a asp-action="Index"><button class="ml-2 btn btn-primary " type="button">Retour à la liste</button></a>
    </form>
</div>
